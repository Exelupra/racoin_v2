{
    "require": {
        "php": ">=8.2",
        "slim/slim": "4.*",
        "slim/psr7": "*",
        "twig/twig": "3.*",
        "illuminate/database": "11.*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "php-di/php-di": "^7.0",
        "slim/twig-view": "^3.3",
        "phpunit/phpunit": "^11.0"
    },
    "autoload":{
        "psr-0":{
            "controller":"",
            "model":"",
            "db":""
        },
        "require-dev": {
            "squizlabs/php_codesniffer": "^3.0",
            "phpmd/phpmd": "^3.0"
        },
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.10"
    }
}
